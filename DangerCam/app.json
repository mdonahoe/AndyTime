{
  "expo": {
    "name": "DangerCam",
    "slug": "danger-cam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.andytime.dangercam",
      "infoPlist": {
        "NSCameraUsageDescription": "DangerCam needs camera access to capture photos for AI analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.andytime.dangercam",
      "permissions": ["android.permission.CAMERA"]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "DangerCam needs camera access to capture photos for AI analysis."
        }
      ]
    ]
  }
}
